<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kaushal.notifier.LoginActivity"
    android:background="#464140"
    android:padding="45dp">
    <ImageView
        android:id="@+id/Logo"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/my_logo"
        />



    <EditText
        android:gravity="center"
        android:background="@drawable/round_corner_style"
        android:layout_marginTop="80dp"
        android:layout_below="@id/Logo"
        android:id="@+id/username"
        android:hint="Username"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <EditText
        android:gravity="center"
        android:background="@drawable/round_corner_style"
        android:inputType="textWebPassword"
        android:id="@+id/password"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />
    <Button
        android:background="@drawable/round_corner_button"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/Login"
        android:text="Login"
        android:onClick="sumbmitclick"
        android:layout_below="@id/password"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerHorizontal="true"
        android:text="Not a Member? Sign Up"
        android:layout_alignParentBottom="true"
        android:id="@+id/createAccountTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
